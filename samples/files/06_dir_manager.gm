// 06_dir_manager.gm: Demonstrates directory operations
var current = pwd();
printf("Current Working Directory: %s\n", current);

var test_dir = "samples/files/test_folder";
if (!is_dir(test_dir)) {
    mkdir(test_dir);
    println("Created directory: " + test_dir);
}

println("Entries in samples/files/:");
var entries = list_dir("samples/files");
foreach name in entries {
    var full_path = "samples/files/" + name;
    printf("- %s (Is File: %b)\n", name, is_file(full_path));
}