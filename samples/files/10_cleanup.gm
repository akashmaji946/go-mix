// 10_cleanup.gm: Demonstrates renaming and removal
var old_path = "samples/files/temp.txt";
var new_path = "samples/files/permanent.txt";

append_file(old_path, "Temporary data");
rename_file(old_path, new_path);
println("Renamed temp.txt to permanent.txt");

getchar();

remove_file(new_path);
println("Removed permanent.txt");

getchar();
getchar();

