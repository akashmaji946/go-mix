// Section 17: Performance Test
print("\n--- SECTION 17: Performance Test ---")

var perf_sum = 0
var perf_i = 0
for(perf_i = 0; perf_i < 100; perf_i = perf_i + 1) {
    var value = perf_i
    perf_sum = perf_sum + value
}
