var lifetime_i = 0
for(lifetime_i = 0; lifetime_i < 3; lifetime_i = lifetime_i + 1) {
    var iteration_specific = lifetime_i * 7
    print("Iteration", lifetime_i, "specific var:", iteration_specific)
