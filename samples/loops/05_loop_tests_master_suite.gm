// Section 18: Nested Accumulation
print("\n--- SECTION 18: Nested Accumulation ---")

var grand_total = 0
var nest_i = 0
for(nest_i = 0; nest_i < 3; nest_i = nest_i + 1) {
    var level1_sum = 0
    var nest_j = 0
    for(nest_j = 0; nest_j < 3; nest_j = nest_j + 1) {
        var value = nest_i * 10 + nest_j
        level1_sum = level1_sum + value
        grand_total = grand_total + value
    }
    print("Level 1 sum for i =", nest_i, ":", level1_sum)
}
print("Grand total:", grand_total)

// Section 19: Complex Variable Scoping
print("\n--- SECTION 19: Complex Scoping ---")

var global_var = 100
var scope_i = 0
for(scope_i = 0; scope_i < 2; scope_i = scope_i + 1) {
    var level1_var = scope_i * 10
    var scope_j = 0
    while(scope_j < 2) {
        var level2_var = scope_j
        var all_vars = global_var + level1_var + level2_var
        print("All vars sum:", all_vars)
        scope_j = scope_j + 1
    }
}

// Section 20: Final Complex Test
print("\n--- SECTION 20: Final Complex Test ---")

var final_result = 0
var f1 = 0
for(f1 = 1; f1 <= 3; f1 = f1 + 1) {
    var f1_contrib = f1 * 100
    
    var f2 = 0
    while(f2 < 2) {
        var f2_contrib = f2 * 10
        
        var f3 = 0
        for(f3 = 0; f3 < 2; f3 = f3 + 1) {
            var f3_contrib = f3
            var iteration_sum = f1_contrib + f2_contrib + f3_contrib
            final_result = final_result + iteration_sum
            print("Complex:", f1, f2, f3, "sum:", iteration_sum)
        }
        f2 = f2 + 1
    }
}
print("Final complex result:", final_result)

print("\n========================================")
