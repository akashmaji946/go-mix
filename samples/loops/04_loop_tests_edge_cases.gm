// Test 10: Alternating loop types with edge cases
print("\n=== Test 10: Alternating Loop Types ===")
var alt_outer = 0
for(alt_outer = 0; alt_outer < 2; alt_outer = alt_outer + 1) {
    var outer_data = alt_outer * 100
    
    var alt_inner = 0
    while(alt_inner < 1) {
        var inner_data = alt_inner * 10
        
        var alt_deep = 0
        for(alt_deep = 0; alt_deep < 1; alt_deep = alt_deep + 1) {
            var deep_data = alt_deep
            var total = outer_data + inner_data + deep_data
            print("Alternating edge case, total:", total)
        }
        alt_inner = alt_inner + 1
    }
}

