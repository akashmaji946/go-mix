// Test 5: Nested loops with varying iteration counts
print("\n=== Test 5: Varying Iteration Counts ===")
var outer_var = 0
for(outer_var = 0; outer_var < 3; outer_var = outer_var + 1) {
    var iterations = outer_var + 1
    print("Outer:", outer_var, "will do", iterations, "inner iterations")
    
    var inner_var = 0
    while(inner_var < iterations) {
        var inner_value = inner_var * 10
        print("  Inner:", inner_var, "value:", inner_value)
        inner_var = inner_var + 1
    }
}

