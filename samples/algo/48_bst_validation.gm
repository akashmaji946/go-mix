// Validate BST

struct TreeNode {
    func init(val) {
        this.val = val;
        this.left = nil;
        this.right = nil;
    }
}

func isValidBST(node, minVal, maxVal) {
    if (node == nil) { return true; }

    if (minVal != nil && node.val <= minVal) { return false; }
    if (maxVal != nil && node.val >= maxVal) { return false; }

    return isValidBST(node.left, minVal, node.val) && isValidBST(node.right, node.val, maxVal);
}

var root = new TreeNode(2);
root.left = new TreeNode(1);
root.right = new TreeNode(3);

println("Is valid BST? ", isValidBST(root, nil, nil));

var root2 = new TreeNode(5);
root2.left = new TreeNode(1);
root2.right = new TreeNode(4);
root2.right.left = new TreeNode(3);
root2.right.right = new TreeNode(6);

println("Is valid BST (root2)? ", isValidBST(root2, nil, nil));