// 09_error_handling.gm: Demonstrates stderr and process exit
var target = "samples/files/non_existent.txt";

if (!file_exists(target)) {
    eprintf("CRITICAL ERROR: Required file '%s' is missing!\n", target);
    eprintln("Terminating program with status 1.");
    exit(1);
}

// This line will never be reached if file is missing
println("File found!");