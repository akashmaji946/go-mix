{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "../vscode-ext/out",
    "rootDir": "../vscode-ext/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["../vscode-ext/src"],
  "exclude": ["../vscode-ext/node_modules", "../vscode-ext/.vscode-test"]
}
